<LoginScreen>

    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 40, 30
            spacing: 10, 10
            Label:
                text: 'User Login'
                font_size: '20sp'
            TextInput:
                hint_text: 'Username'
                id: u_n
            TextInput:
                hint_text: 'Password'
                id: pword
                password: True
            
            RelativeLayout
                Button:
                    text: 'Submit'
                    on_press: root.login_success(root.ids.u_n.text, root.ids.pword.text)
                    size_hint: 0.25, 0.8
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: ''
                id: login_wrong

        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 250, 0
            Button:
                text:'Forgot Password?'
                color: .45, 1, 0.64, 1
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state=='normal' else 0.75
            Button:
                text: 'Sign Up'
                on_press: root.sign_up()
                color: .45, 1, 0.64, 1
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state=='normal' else 0.75

<SignUpScreen>

    GridLayout:
        cols: 1
        Label:
            text: 'Sign Up'
        Label:
            text: 'User Name'
        TextInput:
            hint_text: 'User Name'
            id: u_n
        
        Label:
            text: 'Password'
        TextInput:
            hint_text: 'Password'
            id: pword

        Button:
            text: 'Sign Up!'
            on_press: root.add_user(root.ids.u_n.text, root.ids.pword.text)
        Button:
            text:'Log In'
            on_press: root.log_in()
            
<SignUpSuccess>
    GridLayout:
        cols: 1
        Label:
            text: 'Sign Up Succesful!'
        Button:
            text:'Login'
            on_press: root.log_in()

<LoginSuccesScreen>
    GridLayout:
        cols: 1
        Button:
            text:'Log Out'
            on_press: root.log_out()
        Label:
            text:'How do you feel?'
        TextInput:
            id: mood
            hint_text: 'Your mood please...happy, sad or unloved'
        Button:
            text:'Enlighten Me!'
            on_press: root.quote_display(root.ids.mood.text)
        GridLayout:
            cols: 1
            rows: 3
            height: 100
            Label:
                text: ''
                id: quote

<RootWidget>
    LoginScreen
        name: 'Login_Screen'
    SignUpScreen
        name: 'Signup_Screen'
    SignUpSuccess
        name: 'Sign_Up_Screen_Success'
    LoginSuccesScreen
        name: 'Log_In_Success_Screen'
